<Ui>
  <Frame name="BaganatorSplitViewHotbarTemplate" virtual="true" hidden="true" topLevel="true" enableMouse="true" mixin="BaganatorSplitViewHotbarMixin">
    <Scripts>
      <OnLoad method="OnLoad"/>
      <OnShow method="OnShow"/>
    </Scripts>
    <KeyValues>
      <KeyValue key="layoutType" value="TooltipDefaultLayout" type="string"/>
    </KeyValues>
    <Frames>
      <Frame parentKey="NineSlice" inherits="NineSlicePanelTemplate"/>
      <Button parentKey="ToggleBankButton" inherits="BaganatorBankButtonTemplate" frameLevel="700" parentArray="AllButtons">
        <Scripts>
          <OnClick>
            self:GetParent():ToggleBank()
          </OnClick>
        </Scripts>
      </Button>
      <Button parentKey="ToggleGuildBankButton" inherits="BaganatorGuildBankButtonTemplate" frameLevel="700" parentArray="AllButtons">
        <Scripts>
          <OnClick>
            self:GetParent():ToggleGuildBank()
          </OnClick>
        </Scripts>
      </Button>
      <Button parentKey="ToggleAllCharacters" inherits="BaganatorAllCharactersButtonTemplate" frameLevel="700" parentArray="AllButtons"/>
      <Button parentKey="SortButton" inherits="BaganatorSortButtonTemplate" frameLevel="700" registerForClicks="LeftButtonUp,RightButtonUp" hidden="true" parentArray="AllButtons">
        <Scripts>
          <OnClick>
            self:GetParent():CombineStacksAndSort(button == "RightButton")
          </OnClick>
          <OnEnter inherit="append">
            self.tooltipText = self:GetParent():GetExternalSortMethodName()
          </OnEnter>
        </Scripts>
      </Button>
      <Button parentKey="TransferButton" inherits="BaganatorTransferButtonTemplate" frameLevel="700" parentArray="AllButtons">
        <Scripts>
          <OnClick>
            self:GetParent():Transfer()
          </OnClick>
        </Scripts>
      </Button>
      <Button parentKey="CustomiseButton" inherits="BaganatorCustomiseButtonTemplate" frameLevel="700" parentArray="AllButtons">
      </Button>
      <Button parentKey="CurrencyButton" inherits="BaganatorCurrencyButtonTemplate" frameLevel="700" parentArray="AllButtons"/>

      <!--<Frame parentKey="SearchWidget" inherits="BaganatorSearchWidgetTemplate"/>
      <Frame parentKey="ButtonVisibility" inherits="BaganatorItemViewButtonVisibilityTemplate"/>-->

      <Frame parentKey="CurrencyWidget" inherits="BaganatorCurrencyWidgetTemplate"/>
    </Frames>
  </Frame>
</Ui>
